<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_to_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.42" />

    <TextView
        android:id="@+id/static_aisle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Aisle:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/guideline_to_change"/>

    <TextView
        android:id="@+id/dynamic_aisle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:text="Placeholder for Aisle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guideline5"/>

    <TextView
        android:id="@+id/static_aisle_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Aisle Section:"
        app:layout_constraintTop_toBottomOf="@id/static_aisle"
        app:layout_constraintLeft_toRightOf="@id/guideline_to_change"
        app:layout_constraintRight_toLeftOf="@id/guideline5"/>

    <TextView
        android:id="@+id/dynamic_aisle_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="Placeholder for Aisle Section"
        app:layout_constraintTop_toBottomOf="@id/dynamic_aisle"
        app:layout_constraintRight_toLeftOf="@id/guideline5"/>

    <TextView
        android:id="@+id/static_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Type:"
        app:layout_constraintTop_toBottomOf="@id/static_aisle_section"
        app:layout_constraintLeft_toRightOf="@id/guideline_to_change"
        app:layout_constraintRight_toLeftOf="@id/guideline5"/>

    <TextView
        android:id="@+id/dynamic_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="Placeholder for Type"
        app:layout_constraintTop_toBottomOf="@id/dynamic_aisle_section"
        app:layout_constraintRight_toLeftOf="@id/guideline5"/>

    <TextView
        android:id="@+id/static_accessibility"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Accessibility:"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/static_type"
        app:layout_constraintLeft_toRightOf="@id/guideline_to_change"
        app:layout_constraintRight_toLeftOf="@id/guideline5"/>

    <TextView
        android:id="@+id/dynamic_accessibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="Placeholder for Accessibility"
        app:layout_constraintTop_toBottomOf="@id/dynamic_type"
        app:layout_constraintRight_toLeftOf="@id/guideline5"/>

    <TextView
        android:id="@+id/static_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Description:"
        android:visibility="gone"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="@id/dynamic_description"
        app:layout_constraintLeft_toRightOf="@id/guideline_to_change"
        app:layout_constraintRight_toLeftOf="@id/guideline5"/>

    <TextView
        android:id="@+id/dynamic_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:visibility="gone"
        android:text="Placeholder for descrption"
        app:layout_constraintTop_toBottomOf="@id/dynamic_accessibility"
        app:layout_constraintRight_toLeftOf="@id/edit"/>

    <ImageView
        android:id="@+id/edit"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/edit"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/dynamic_description"
        app:layout_constraintRight_toLeftOf="@id/guideline5"/>

    <Button
        android:id="@+id/more_details_button"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_gravity="start"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="12dp"
        android:enabled="true"
        android:background="@drawable/reverse_yellow_gradient"
        android:textSize="16sp"
        android:text="+ More Details"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/static_accessibility"
        app:layout_constraintVertical_bias="0.019" />

    <Button
        android:id="@+id/move_location_button"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_gravity="start"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="15dp"
        android:enabled="true"
        android:background="@drawable/blue_gradient_button"
        android:textSize="16sp"
        android:text="Move Location"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/more_details_button"
        app:layout_constraintVertical_bias="0.019" />

    <Button
        android:id="@+id/remove_location_button"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_gravity="start"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="15dp"
        android:enabled="true"
        android:background="@drawable/red_button_gradient"
        android:textSize="16sp"
        android:text="Remove Location"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/move_location_button"
        app:layout_constraintVertical_bias="0.019" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideline4"
        app:layout_constraintRight_toRightOf="@id/guideline3" />

</androidx.constraintlayout.widget.ConstraintLayout>